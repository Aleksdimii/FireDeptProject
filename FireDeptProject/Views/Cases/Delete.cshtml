@model FireDeptProject.Models.Case

@{
    ViewData["Title"] = "Delete Case";
}

<style>
    .delete-section {
        background: linear-gradient(to right, #8B0000, #FF4500);
        color: white;
        padding: 50px 30px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        margin-top: 50px;
    }

        .delete-section h1,
        .delete-section h3,
        .delete-section h4 {
            color: #fff;
        }

    dl.row dt, dl.row dd {
        color: #fff;
        font-size: 1.1rem;
    }

    .btn-danger {
        font-size: 1.1rem;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        background-color: #fff;
        color: #8B0000;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #f8d7da;
        }

    a.back-link {
        color: #fff;
        margin-left: 15px;
        font-weight: 500;
        text-decoration: underline;
    }

    hr {
        border-color: #fff;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 delete-section">
            <h1>Delete Case</h1>
            <h3>Are you sure you want to delete this?</h3>
            <hr />
            <h4>Case Details</h4>

            <dl class="row mt-4">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Type)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Type)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AmountOfUnitsNeeded)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.AmountOfUnitsNeeded)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Address)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="back-link">← Back to List</a>
            </form>
        </div>
    </div>
</div>
