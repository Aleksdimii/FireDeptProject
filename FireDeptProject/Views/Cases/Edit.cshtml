@model FireDeptProject.Models.Case

@{
    ViewData["Title"] = "Edit Case";
}

<style>
    .edit-section {
        background: linear-gradient(to right, #8B0000, #FF4500);
        color: white;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        margin-top: 50px;
    }

        .edit-section label {
            color: #fff;
            font-weight: 500;
        }

        .edit-section input.form-control {
            border-radius: 10px;
        }

        .edit-section .btn-save {
            background-color: #fff;
            color: #8B0000;
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

            .edit-section .btn-save:hover {
                background-color: #f2f2f2;
            }

        .edit-section .btn-back {
            color: #fff;
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 edit-section">
            <h1 class="text-white mb-4">Edit Case</h1>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AmountOfUnitsNeeded" class="control-label"></label>
                    <input asp-for="AmountOfUnitsNeeded" class="form-control" />
                    <span asp-validation-for="AmountOfUnitsNeeded" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-save">Save Changes</button>
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="btn-back">← Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
