@model FireDeptProject.Models.Unit

@{
    ViewData["Title"] = "Edit Unit";
}

<div class="text-white">
    <h1 class="mb-4">Edit Unit</h1>
    <h5 class="mb-3 text-light">Make changes to the unit's information and click <strong>Save</strong> to update.</h5>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="bg-dark p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label fw-bold text-warning"></label>
                    <input asp-for="FirstName" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="LastName" class="form-label fw-bold text-warning"></label>
                    <input asp-for="LastName" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="💾 Save" class="btn btn-success btn-lg me-2" />
                    <a asp-action="Index" class="btn btn-outline-light btn-lg">← Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
