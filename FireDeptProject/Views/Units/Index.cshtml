@model IEnumerable<FireDeptProject.Models.Unit>

@{
    ViewData["Title"] = "Units";
}

<div class="text-white">
    <h1 class="mb-4">Unit Directory</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-lg btn-danger shadow">➕ Add New Unit</a>
    </div>

    <div class="table-responsive rounded shadow-sm">
        <table class="table table-bordered table-hover table-dark align-middle">
            <thead class="thead-light text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.LastName)</th>
                    <th style="width: 25%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">✏️ Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">📄 Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
