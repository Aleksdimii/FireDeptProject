@model IEnumerable<FireDeptProject.Models.Vehicles>

@{
    ViewData["Title"] = "Vehicles";
}

<div class="container py-5 text-white">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-danger">🚒 Vehicle Deployments</h1>
        <p class="lead text-light">Monitor all active and completed vehicle missions.</p>
        <hr class="border-danger" style="width: 60px; margin: 1rem auto;" />
        <a asp-action="Create" class="btn btn-lg btn-danger shadow px-4 mt-3">➕ Add New Vehicle</a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover table-bordered align-middle text-center shadow-lg border border-danger-subtle">
            <thead class="table-danger text-uppercase">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Unit)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CaseStarted)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CaseResolved)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Case)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Unit?.Id</td>
                        <td>@item.CaseStarted.ToString("g")</td>
                        <td>@item.CaseResolved.ToString("g")</td>
                        <td>@item.Case?.Id</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">✏️ Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">🔍 View</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
