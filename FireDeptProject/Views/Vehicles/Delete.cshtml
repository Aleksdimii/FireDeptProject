@model FireDeptProject.Models.Vehicles

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="container py-5 text-white">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-danger">🗑️ Confirm Deletion</h1>
        <p class="lead">This action is irreversible. Are you sure you want to delete this vehicle deployment?</p>
        <hr class="border-danger" style="width: 60px; margin: 1rem auto;" />
    </div>

    <div class="bg-dark bg-opacity-75 p-5 rounded-4 shadow-lg border border-danger-subtle">
        <h4 class="text-warning mb-4">🚒 Vehicle Assignment Details</h4>
        <dl class="row">
            <dt class="col-sm-3 text-light">Unit</dt>
            <dd class="col-sm-9 text-white">@Html.DisplayFor(model => model.Unit.Id)</dd>

            <dt class="col-sm-3 text-light">Case Started</dt>
            <dd class="col-sm-9 text-white">@Html.DisplayFor(model => model.CaseStarted)</dd>

            <dt class="col-sm-3 text-light">Case Resolved</dt>
            <dd class="col-sm-9 text-white">@Html.DisplayFor(model => model.CaseResolved)</dd>

            <dt class="col-sm-3 text-light">Case</dt>
            <dd class="col-sm-9 text-white">@Html.DisplayFor(model => model.Case.Id)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <button type="submit" class="btn btn-lg btn-danger px-5 shadow">
                    🗑️ Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-light btn-lg ms-3">⬅ Cancel</a>
            </div>
        </form>
    </div>
</div>
